<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_products_product_newoperation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/table_row_top_big">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_products_product_newoperation_image"
            android:layout_width="@dimen/image_square"
            android:layout_height="@dimen/image_square"
            android:src="@drawable/medical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lineer_layout_padding_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_products_product_newoperation_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/productName" />

        <Spinner
            android:id="@+id/layout_products_product_newoperation_operationType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lineer_layout_padding_top"
            android:entries="@array/operationtype_array"
            android:prompt="@string/operation_type_prompt"></Spinner>

        <EditText
            android:id="@+id/layout_products_product_newoperation_operationcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/operation_count"
            android:inputType="number" />

        <EditText
            android:id="@+id/layout_products_product_newoperation_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/note"
            android:inputType="text" />

        <TextView
            android:id="@+id/layout_products_product_newoperation_totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/defaultPrice" />

        <ImageButton
            android:id="@+id/layout_products_product_newoperation_saveButton"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/table_row_top_big"
            android:background="@drawable/save_white"/>
    </LinearLayout>


</LinearLayout>
