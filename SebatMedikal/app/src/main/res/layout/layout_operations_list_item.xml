<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_operations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/operations_lineer_layout_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_operations_productname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_text_padding_left"
            android:maxLines="2"
            android:padding="@dimen/list_item_text_padding"
            android:text="@string/productName"
            android:textSize="@dimen/list_item_text_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_operations_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_text_padding_left"
            android:padding="@dimen/list_item_text_padding"
            android:text="@string/operation_count"
            android:textSize="@dimen/list_item_text_little"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/list_item_operations_animation"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:padding="@dimen/list_item_text_padding"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/list_item_operations_operationtype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/operation_type"
            android:textSize="@dimen/list_item_text_big"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
