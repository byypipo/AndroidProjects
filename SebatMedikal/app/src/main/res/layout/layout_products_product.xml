<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_product_image"
            android:layout_width="@dimen/image_square"
            android:layout_height="@dimen/image_square"
            android:src="@drawable/medical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TableRow>

                <TextView
                    android:layout_width="165dp"
                    android:fontFamily="serif"
                    android:text="@string/productName"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/layout_product_productName"
                    android:layout_width="165dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="165dp"
                    android:fontFamily="serif"
                    android:text="@string/price"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/layout_product_price"
                    android:layout_width="165dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="165dp"
                    android:fontFamily="serif"
                    android:text="@string/brand"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/layout_product_brand"
                    android:layout_width="165dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="165dp"
                    android:fontFamily="serif"
                    android:text="@string/note"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/layout_product_note"
                    android:layout_width="165dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="165dp"
                    android:fontFamily="serif"
                    android:text="@string/stock"
                    android:textSize="50px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/layout_product_stock"
                    android:layout_width="165dp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/layout_product_new_operation_button"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="@string/newOperation"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>
